{
	"include": [
		"sacred.ts"
	],
	"exclude": [
		"out",
		"*.js",
		"*.d.ts",
	],
	"compilerOptions": {
		"outDir": "out",
		"module": "umd",
		"moduleResolution": "node",
		"allowJs": false,
		"declaration": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"preserveConstEnums": true,
		"removeComments": true,
		"sourceMap": false,
		"suppressImplicitAnyIndexErrors": true,
        
		"target": "es6",

		"lib": [
			"dom",
			"es2017"
		]
	}
}
